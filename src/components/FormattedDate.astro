---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const japanTime = new Date(date.toLocaleString("en-US", { timeZone: "Asia/Tokyo" }));
---

<time datetime={japanTime.toISOString()}>
  {
    japanTime.toLocaleDateString("ja-JP", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
