---
import { GOOGLE_FORM_LINK } from "../../consts";
---

<div class="container">
  <h2 class="title">おたより募集中！</h2>
  <div class="animation-container">
    <div class="laptop">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
        <line x1="8" y1="21" x2="16" y2="21"></line>
        <line x1="12" y1="17" x2="12" y2="21"></line>
      </svg>
    </div>
    <div class="letter-container">
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="dot"></div>
      <div class="letter">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path
            d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z"
          ></path>
          <polyline points="8 10 12 14 16 10"></polyline>
        </svg>
      </div>
    </div>
    <div class="server">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
        <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
        <line x1="6" y1="6" x2="6" y2="6"></line>
        <line x1="6" y1="18" x2="6" y2="18"></line>
      </svg>
    </div>
  </div>
  <!-- <p class="exaplain">(Google Formが開きます)</p> -->
  <a
    class="link"
    href={GOOGLE_FORM_LINK}
    target="_blank"
    rel="noopener noreferrer"
  >
    おたよりを送ってみる
  </a>
  <p class="caution">(Google Formが開きます)</p>
</div>

<style>
  .container {
    text-align: center;
    background-color: var(--accent);
    padding: 12px;
    border-radius: 8px;
  }
  .title {
    color: var(--accent-white);
    font-size: 1.4rem;
  }

  .animation-container {
    margin: 8px auto 0;
    background-color: var(--accent);
    padding: 20px;
    color: var(--accent-white);
    display: grid;
    grid-template-columns: 40px 1fr 40px;
    gap: 8px;
    align-items: center;
    max-width: 600px;
  }
  .laptop {
    width: 40px;
    height: 40px;
  }

  .letter-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    height: 60px;
  }
  .dot {
    width: 12%;
    height: 8px;
    background-color: var(--accent-white);
    border-radius: 12px;
    margin: 0 4px;
  }
  .letter {
    width: 32px;
    height: 32px;
    position: absolute;
    top: -8px;
    left: 0;
    animation: moveAndFade 5s infinite;

    @media (max-width: 720px) {
      animation: moveAndFade 3s infinite;
    }
  }
  @keyframes moveAndFade {
    0% {
      left: 0;
    }
    25% {
      left: calc(25% - 8px);
    }
    50% {
      left: calc(50% - 16px);
    }
    75% {
      left: calc(75% - 24px);
    }
    100% {
      left: calc(100% - 32px);
    }
  }

  .server {
    width: 40px;
    height: 40px;
  }
  .link {
    color: var(--accent-white);
    text-decoration: underline;
    background-color: var(--accent);
  }
  .exaplain {
    margin-top: 8px;
    font-size: 1rem;
    color: var(--accent-white);
  }
  .caution {
    margin-top: 8px;
    font-size: 1rem;
    color: var(--accent-white);
  }
</style>
