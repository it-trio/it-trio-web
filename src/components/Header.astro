---
import HeaderLink from "./HeaderLink.astro";
import Logo from "./icons/Logo.astro";

interface Props {
  fixed?: boolean;
}

const { fixed }: Props = Astro.props;
---

<header class={fixed ? "fixed" : ""}>
  <nav>
    <a class="icon" href="/">
      <Logo name="logo" />
    </a>
    <div class="links">
      <HeaderLink href="/blog">ブログ</HeaderLink>
      <HeaderLink href="/episode">エピソード</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--accent-white);
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.05);
    height: var(--header-height);

    @media (max-width: 720px) {
      height: var(--header-height-mobile);
    }
  }
  .fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .icon {
    display: block;
    line-height: 1;
    width: 200px;
    height: auto;
    color: var(--accent);

    @media (max-width: 720px) {
      width: 120px;
    }
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .links {
    display: flex;
    align-items: center;
    gap: 16px;
  }
</style>
